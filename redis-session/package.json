{
  "name": "mcp-redis-server",
  "version": "1.0.0",
  "description": "A scalable MCP Redis server with CRUD operations for info, sessions, and messages for agents",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "mcp-redis-server": "./dist/server.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "dev:watch": "ts-node --watch src/server.ts",
    "clean": "rm -rf dist",
    "postinstall": "npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "redis",
    "crud",
    "sessions",
    "messages",
    "server"
  ],
  "author": "Juan Bernal",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
